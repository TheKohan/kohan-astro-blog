---
import { Cloudinary } from "@cloudinary/url-gen";
import { Resize } from "@cloudinary/url-gen/actions/resize";

export interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
}

const { props } = Astro;

const cldSrc = new Cloudinary({ cloud: { cloudName: "kohan-devblog" } });
const image = cldSrc
  .image(props.src)
  .format("auto")
  .quality("auto")
  .resize(Resize.scale().width(props.width).height(props.height));

if (props.src.startsWith("https://")) {
  image.setDeliveryType("fetch");
}
---

<img {...props} alt={props.alt} loading="lazy" src={image.toURL()} />
