{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "preserve",
    // Skip type checking of external libraries.
    "skipLibCheck": true,
    "importsNotUsedAsValues": "preserve" // fixed through linting
  },
  "paths": {
    "@components/*": ["src/components/*"],
    "@layouts/*": ["src/layouts/*"]
  },
  "include": [
    "src",
    "astro.config.mjs",
    ".eslintrc.cjs",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs"
  ]
}
