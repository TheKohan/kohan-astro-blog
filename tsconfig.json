{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    // Skip type checking of external libraries.
    "skipLibCheck": true,
    "importsNotUsedAsValues": "preserve", // fixed through linting
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@components/*": ["src/components/*"]
    }
  },

  "include": [
    "src",
    "astro.config.mjs",
    ".eslintrc.cjs",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs"
  ]
}
